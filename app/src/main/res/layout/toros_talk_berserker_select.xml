<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="wrap_content"
        android:layout_height="520dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="520dp"
            android:background="@drawable/torostalk"
            android:orientation="vertical"


            >

            <ImageView

                android:id="@+id/imageView3"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"

                android:padding="10dp"
                android:src="@drawable/toros"

                />

            <TextView
                android:id="@+id/textNazwisko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textImie"
                android:layout_below="@+id/textImie"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:padding="5dp"
                android:text="Wojowniku"
                android:textAlignment="gravity"
                android:textColor="@color/colorTekstu"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textProsfesja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textWiek"
                android:layout_below="@+id/textWiek"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Od tej chwili zostałeś młodym Berserkerem, idź siać mord i cierpienie wśród wszystkich przeciwników!"
                android:textColor="@color/colorForTheExpo"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textWiek"
                android:layout_below="@+id/textWiek"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Od tej chwili zostałeś młodym Berserkerem, idź siać mord i cierpienie wśród wszystkich przeciwników!"
                android:textColor="@color/colorForTheExpo"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>