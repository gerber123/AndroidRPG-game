<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/karczma"
    tools:context=".Mag.Menu.MagKarczma">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/relativeLayout10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <android.support.v7.widget.CardView
                    android:id="@+id/eq"
                    android:layout_width="250dp"
                    android:layout_height="370dp"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_rowWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/cardview_dark_background"
                    app:cardElevation="8dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="230dp"
                            android:layout_height="230dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/eqkarczma" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:text="Ekwipunek"
                            android:textAlignment="gravity"
                            android:textColor="@color/colorPodswietlenia"
                            android:textSize="15sp"


                            />



                        <Button
                            android:id="@+id/buttonEq"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:text="Sprawdź" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/shop"
                    android:layout_width="250dp"
                    android:layout_height="370dp"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_rowWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/cardview_dark_background"
                    app:cardElevation="8dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="230dp"
                            android:layout_height="230dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/shopkarczma" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:text="Handlarz"
                            android:textAlignment="gravity"
                            android:textColor="@color/colorPodswietlenia"
                            android:textSize="15sp"


                            />



                        <Button
                            android:id="@+id/buttonShop"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:text="Odwiedź" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/potion"
                    android:layout_width="250dp"
                    android:layout_height="370dp"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_rowWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/cardview_dark_background"
                    app:cardElevation="8dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="230dp"
                            android:layout_height="230dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/skillmaster" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:text="Nauczyciel Magii"
                            android:textAlignment="gravity"
                            android:textColor="@color/colorPodswietlenia"
                            android:textSize="15sp"


                            />



                        <Button
                            android:id="@+id/buttonProf"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:text="Odwiedz" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/honor"
                    android:layout_width="250dp"
                    android:layout_height="370dp"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_rowWeight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/cardview_dark_background"
                    app:cardElevation="8dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="240dp"
                            android:layout_height="240dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/cup" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:text="Świątynia Honoru"
                            android:textAlignment="gravity"
                            android:textColor="@color/colorPodswietlenia"
                            android:textSize="15sp"


                            />



                        <Button
                            android:id="@+id/buttonHonor"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:text="Odwiedz" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>









            </LinearLayout>

        </HorizontalScrollView>



</android.support.constraint.ConstraintLayout>