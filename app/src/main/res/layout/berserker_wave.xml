<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_margin="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="520dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="520dp"
            android:orientation="vertical"
            android:background="@drawable/torostalk"



            >

            <ImageView

                android:id="@+id/imageView3"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="250dp"
                android:padding="10dp"
                android:src="@drawable/toros"
                android:layout_marginTop="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                />
            <TextView
                android:id="@+id/textNazwisko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textImie"
                android:layout_below="@+id/textImie"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:textAlignment="gravity"
                android:textColor="@color/colorForTheExpo"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Scieżka berserkera"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/textOcena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textWiek"
                android:layout_below="@+id/textWiek"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Berserker to osoba posiadająca potężne Ciosy oraz nie umiarkowana chęć zabicia przeciwnika. Jego Umiejętność Pozwala zmniejszyć obrone przeciwnika o 200 oraz dodać samemu sobie o 300 do ataku"
                android:textColor="@color/colorForTheExpo"
                android:textSize="15sp"
                android:textStyle="bold" />




        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>