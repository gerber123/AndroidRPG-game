<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@mipmap/ic_launcher"
        />

    <TextView
        android:textSize="20sp"
        android:id="@+id/textView_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="@color/colorForTheExpo"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageView2"
        android:text="TextView" />
    <TextView
        android:textStyle="bold"
        android:id="@+id/textView_klasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView_nick"
        android:layout_below="@+id/textView_nick"
        android:textColor="@color/colorPodswietlenia"

        android:text="TextView" />
    <TextView


        android:id="@+id/textView_lvl"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView_klasa"
        android:textColor="@color/colorPodswietlenia"

        android:layout_below="@+id/textView_klasa"
        android:text="TextView" />



    <TextView
        android:id="@+id/textView_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView_lvl"
        android:textColor="@color/colorPodswietlenia"

        android:layout_below="@+id/textView_lvl"
        android:text="TextView"
     />
    <TextView
        android:id="@+id/textView_hajs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView_exp"
        android:textColor="@color/colorPodswietlenia"

        android:layout_below="@+id/textView_exp"
        android:text="TextView"
     />




</RelativeLayout>